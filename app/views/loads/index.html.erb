<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<div class="container">
  <h1 class="mt-5">All Loads</h1>

  <a class="btn btn-primary mb-3" href="/loads/new">New Load</a>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Customer</th>
        <th>Origin</th>
        <th>Destination</th>
        <th>Pick Up Date</th>
        <th>Delivery Date</th>
        <th>Status</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @loads.each do |load| %>
        <tr>
          <td><%= load.customer %></td>
          <td><%= load.origin %></td>
          <td><%= load.destination %></td>
          <td><%= load.pickup_date %></td>
          <td><%= load.delivery_date %></td>
          <td><%= load.status %></td>
          <td><%= link_to 'Show', load, class: 'btn btn-sm btn-outline-secondary' %></td>
          <td><%= link_to 'Edit', edit_load_path(load), class: 'btn btn-sm btn-outline-primary' %></td>
          <td><%= link_to 'Destroy', load, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "All customers", customers_path, class: 'btn btn-secondary mb-3' %>
  <%= link_to 'Homepage', root_path, class: 'btn btn-primary mb-3' %>
</div>
